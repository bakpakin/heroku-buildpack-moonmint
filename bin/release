#!/usr/bin/env bash
# bin/release <BUILD_DIR>

cat <<EOF
---
config_vars:
  PATH: ${1%/}/bin:/usr/local/bin:/usr/bin:/bin
  LD_LIBRARY_PATH: ${1%/}/lib/luarocks/lib
  LUA_CPATH: ./?.so;${1%/}/lib/luarocks/lib/lua/5.1/?.so
  LUA_PATH: ./?.lua;${1%/}/lib/luarocks/share/lua/5.1/?.lua;${%/}/luarocks/lib/share/lua/5.1/?/init.lua
EOF
