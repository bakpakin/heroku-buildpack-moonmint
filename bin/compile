#!/usr/bin/env bash

set -e
set -o pipefail

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
LOCALINSTALLS=${DIR%/}/../local

# Copy everything into /opt
echo "-----> Copying to /app/.luainstall directory..."
cp -r $LOCALINSTALLS ${1%/}/.luarocks

mkdir -p $1/.profile.d
echo 'export PATH=/app/.luarocks/bin:$PATH && eval $(luarocks path)' > $1/.profile.d/luajit.sh
